<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        body {
            margin: 0;
            padding: 15px;
            font-family: Arial, sans-serif;
            background: transparent;
        }
        .tinyurl-container {
            background: white;
            border: 2px solid #601a9b;
            border-radius: 8px;
            padding: 15px;
            max-width: 400px;
        }
        h3 {
            margin-top: 0;
            color: #601a9b;
            font-size: 16px;
        }
        input[type="url"] {
            width: 100%;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 4px;
            margin-bottom: 10px;
            box-sizing: border-box;
        }
        button {
            background: #fc731c;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 4px;
            cursor: pointer;
            font-weight: bold;
            width: 100%;
        }
        .result {
            margin-top: 15px;
            padding: 10px;
            background: #f8f3fc;
            border-radius: 4px;
            display: none;
        }
        .short-url {
            color: #601a9b;
            word-break: break-all;
            font-size: 14px;
        }
        .copy-btn {
            background: #601a9b;
            color: white;
            border: none;
            padding: 5px 10px;
            border-radius: 3px;
            cursor: pointer;
            margin-top: 8px;
            font-size: 12px;
        }
    </style>
</head>
<body>
    <div class="tinyurl-container">
        <h3>Shorten URL</h3>
        
        <input type="url" id="urlInput" placeholder="https://example.com">
        
        <button onclick="shortenURL()">Shorten URL</button>
        
        <div id="result" class="result">
            <div><strong>Short URL:</strong></div>
            <div class="short-url" id="shortUrl"></div>
            <button class="copy-btn" onclick="copyToClipboard()">Copy to Clipboard</button>
        </div>
    </div>

    <script>
        function shortenURL() {
            const originalUrl = document.getElementById('urlInput').value.trim();
            const resultDiv = document.getElementById('result');
            
            if (!originalUrl) {
                alert('Please enter a URL');
                return;
            }
            
            // Show loading
            resultDiv.style.display = 'block';
            resultDiv.innerHTML = '<div>Shortening...</div>';
            
            // Use TinyURL API
            fetch(`https://tinyurl.com/api-create.php?url=${encodeURIComponent(originalUrl)}`)
                .then(response => response.text())
                .then(shortUrl => {
                    resultDiv.innerHTML = `
                        <div><strong>Short URL:</strong></div>
                        <div class="short-url" id="shortUrlText">${shortUrl}</div>
                        <button class="copy-btn" onclick="copyToClipboard()">Copy to Clipboard</button>
                    `;
                    
                    // Send to parent JotForm
                    sendToJotForm(shortUrl);
                })
                .catch(error => {
                    resultDiv.innerHTML = `<div style="color: red;">Error: ${error.message}</div>`;
                });
        }
        
        function copyToClipboard() {
            const shortUrl = document.getElementById('shortUrlText').textContent;
            
            navigator.clipboard.writeText(shortUrl)
                .then(() => {
                    alert('Copied to clipboard!');
                })
                .catch(err => {
                    console.error('Copy failed:', err);
                });
        }
        
        function sendToJotForm(shortUrl) {
            // Try to send to JotForm parent
            try {
                if (window.parent && window.parent.JFCustomWidget) {
                    window.parent.JFCustomWidget.sendData({
                        shortenedUrl: shortUrl,
                        originalUrl: document.getElementById('urlInput').value
                    });
                }
                
                // Also try postMessage
                window.parent.postMessage({
                    type: 'SHORTENED_URL',
                    url: shortUrl
                }, '*');
                
            } catch(e) {
                console.log('Could not send to JotForm:', e);
            }
        }
        
        // Listen for messages from JotForm
        window.addEventListener('message', function(event) {
            if (event.data && event.data.type === 'GET_URL') {
                const url = document.getElementById('urlInput').value;
                if (url) {
                    shortenURL();
                }
            }
        });
    </script>
</body>
</html>
